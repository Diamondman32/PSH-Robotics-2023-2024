            //open
            servoPos = 0.71;
            rightGrabberToggle = false;
            rightGrabTimer.reset();
        } else if (!rightGrabberToggle && gamepad2.right_bumper && rightGrabTimer.milliseconds()>100) {
            //closed
            servoPos = 0.86;
            rightGrabberToggle = true;
            rightGrabTimer.reset();
